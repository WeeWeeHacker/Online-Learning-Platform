@{
    ViewData["Title"] = "Welcome to Cache Class";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12 text-center my-4">
            <h1 class="display-4 fw-bold text-primary">Cache Class</h1>
            <p class="lead text-muted mb-5">Choose Your Role</p>
        </div>
    </div>

    <div class="row justify-content-center g-4">
        <!-- Learner Card -->
        <div class="col-12 col-md-4">
            <div class="card h-100 shadow-sm border-primary">
                <div class="card-body d-flex flex-column text-center">
                    <div class="mb-3">
                        <i class="fas fa-graduation-cap fa-3x text-primary mb-3"></i>
                        <h5 class="card-title">Learner</h5>
                        <p class="card-text text-muted">
                            Access learning resources, track progress,
                            and engage with interactive content.
                        </p>
                    </div>
                    <a asp-controller="Learners"
                       asp-action="Index"
                       class="btn btn-primary mt-auto"
                       aria-label="Learner Login">
                        Learner Portal
                    </a>
                </div>
            </div>
        </div>

        <!-- Instructor Card -->
        <div class="col-12 col-md-4">
            <div class="card h-100 shadow-sm border-success">
                <div class="card-body d-flex flex-column text-center">
                    <div class="mb-3">
                        <i class="fas fa-chalkboard-teacher fa-3x text-success mb-3"></i>
                        <h5 class="card-title">Instructor</h5>
                        <p class="card-text text-muted">
                            Manage courses, assess learner performance,
                            and create engaging learning experiences.
                        </p>
                    </div>
                    <a asp-controller="Instructors"
                       asp-action="Index"
                       class="btn btn-success mt-auto"
                       aria-label="Instructor Login">
                        Instructor Portal
                    </a>
                </div>
            </div>
        </div>

        <!-- Admin Card -->
        <div class="col-12 col-md-4">
            <div class="card h-100 shadow-sm border-danger">
                <div class="card-body d-flex flex-column text-center">
                    <div class="mb-3">
                        <i class="fas fa-user-shield fa-3x text-danger mb-3"></i>
                        <h5 class="card-title">Admin</h5>
                        <p class="card-text text-muted">
                            Manage platform settings, user management,
                            and system-wide configurations.
                        </p>
                    </div>
                    <a asp-controller="Admin"
                       asp-action="Login"
                       class="btn btn-danger mt-auto"
                       aria-label="Admin Login">
                        Admin Portal
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4 justify-content-center">
        <div class="col-12 col-md-4 text-center">
            <a asp-controller="Account"
               asp-action="Create"
               class="btn btn-outline-info btn-lg w-100"
               aria-label="Create New Account">
                Create New Account
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.card').hover(
                function() { $(this).addClass('shadow-lg'); },
                function() { $(this).removeClass('shadow-lg'); }
            );
        });
    </script>
}